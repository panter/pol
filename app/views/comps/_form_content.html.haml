.text_field.clearfix
  != form_content.label :content, "Inhalt"
  - form_content.fields_for :globalize_translations do |trans|
    .translation{ :style => 'float: left; margin-right: 5px' }
      - if 1 < pol_cfg.languages.length
        != trans.label :content, "Sprache: #{trans.object.locale}"
      != trans.hidden_field :locale
      != trans.text_area :content
