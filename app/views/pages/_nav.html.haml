.leaves
  %p!= "Navigation Ebene #{level}"
  -id = parent ? "#{parent.id}" : 'roots'
  %ul{ :id => parent ? "#{parent.id}" : 'roots' }
    -pages.each do |page|
      %li{ :id => "page_#{page.id}", :class => (page == active) ? 'active' : '' }
        -if parent
          .icon.drag
        != link_to '', '/'+page.permalink, :popup => true, :class => 'icon preview' 
        != link_to page.title, edit_page_path(page)
    -if parent
      != sortable_element(id, :handle => 'drag', :url => order_page_path(id))

  -if parent
    %p!= link_to 'add...', new_page_page_path(parent)

