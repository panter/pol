- @page.comp_locations.each do |style_class|
  %h2=t(style_class, :scope => :pol)

  %fieldset{ :class => "#{style_class} comp_new" }
    %legend Neuen Inhalt hinzufÃ¼gen
    %ul
      -pol_cfg.comp_available[style_class].each do |comp_name|
        %li{:class => "#{comp_name}"}
          != link_to t('activerecord.models.'+comp_name.underscore), new_page_comp_url(@page, :type => comp_name, :style_class => style_class )
    %br.break

  - if pol_cfg.location_attributes
    %fieldset{ :class => "#{style_class} loc_edit" }
      %legend Box Eigenschaften
      -form_for [@page.parent, @page], :html => { :multipart => true }  do |f|
        %ul
          -pol_cfg.location_attributes.each do |attribute, values|
            %li{:style =>'float:left'}= dynamic_field f, "#{attribute}_#{style_class.tableize.singularize}", values
          %li= f.submit('Speichern')
    %br.break

  - @page.comps_styled(style_class).each do |comp|
    %fieldset
      %legend{:class => "#{comp.class.name}"}
        = comp.class.human_name
        = render 'comps/control', :control => comp
      = render 'comps/comp', :comp => comp
